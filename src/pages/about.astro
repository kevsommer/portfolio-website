---
import BaseLayout from "../layouts/BaseLayout.astro";

import ContactCTA from "../components/ContactCTA.astro";
import Hero from "../components/Hero.astro";
import ResumeItem from "../components/ResumeItem.astro";
---

<BaseLayout
  title="About | Kevin Sommer"
  description="About Kevin Sommer">
  <div class="stack gap-20">
    <main class="wrapper c-about">
      <Hero
        title="About"
        tagline="Thanks for stopping by. Read below to learn more about myself and my background." />

      <div class="c-about__resume">
        <div class="content">
          <h4 class="c-about__resume-title">Work Experience</h4>

          <ResumeItem
            jobTitle="Frontend Developer"
            timePeriod="Nov 2019 - Jun 2023"
            company="TLK Energy"
            description="Energy and Thermodynamics Simulation Interface: built a web-based simulator using React and TypeScript to simulate thermodynamics scenarios for buildings and machines to enable clients to visualize and optimize system performance" />

          <ResumeItem
            jobTitle="Frontend Developer"
            timePeriod=""
            company="Modell Aachen"
            description="" />

          <ResumeItem
            jobTitle="Frontend Developer"
            timePeriod=""
            company="Modell Aachen"
            description="" />
        </div>

        <div class="content">
          <h4 class="c-about__resume-title">Education</h4>

          <ResumeItem 
            jobTitle="B.Sc. Computer Science"
            timePeriod="2017-2020"
            company="RWTH Aachen University"
            description="Courses: Basic Techniques in Computer Graphics, Introduction to Web Technologies, Functional Programming, Numerical Mathematics" />

          <ResumeItem 
            jobTitle="M.Sc. Computer Science"
            timePeriod="2020-2022"
            company="RWTH Aachen University"
            description="Courses: Introduction to Data Science, Machine Learning, Text Mining, Web Mining, Social Data Science, Advanced Internet Technology, Communication Systems Engineering" />
        </div>
      </div>
    </main>
  </div>

  <ContactCTA />
</BaseLayout>

<style>
  .c-about {
    display: flex;
    flex-direction: column;
    gap: 3.5rem;
  }

  .c-about__resume {
    display: grid;
    grid-template-rows: 1fr 1fr;
    gap: 2rem;
    padding: 2rem 0;
  }

  .c-about__resume-title {
    margin-bottom: 1rem;
  }

  .content {
    padding: 1em;
    border-radius: 1em;
    box-shadow: 0px 1px 4px var(--gray-700);
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  @media (min-width: 50em) {
    .c-about__resume {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
      padding: 2rem 0;
    }
  }
</style>
